<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- SERVLET CLASS MAPPING -->
    <servlet><servlet-name>CommonInfra</servlet-name><servlet-class>controllers.CommonInfraController</servlet-class></servlet>
    
    <!-- SERVLET CLASS MAPPING - COMMON INFRASTRUCTURE -->
    <servlet><servlet-name>WarehouseDashboard</servlet-name><jsp-file>/webapp/commoninfrastructure/WarehouseDashboard.jsp</jsp-file></servlet>
    <servlet><servlet-name>WarehouseLogin</servlet-name><jsp-file>/webapp/commoninfrastructure/WarehouseLogin.jsp</jsp-file></servlet>
    
    <!-- URL MAPPING -->
    <servlet-mapping><servlet-name>CommonInfra</servlet-name><url-pattern>/CommonInfra</url-pattern></servlet-mapping>
    
    <!-- URL MAPPING - COMMON INFRASTRUCTURE -->
    <servlet-mapping><servlet-name>WarehouseDashboard</servlet-name><url-pattern>/webapp/commoninfrastructure/WarehouseDashboard</url-pattern></servlet-mapping>
    <servlet-mapping><servlet-name>WarehouseLogin</servlet-name><url-pattern>/webapp/commoninfrastructure/WarehouseLogin</url-pattern></servlet-mapping>
    
    <session-config><session-timeout>300</session-timeout></session-config>
    <welcome-file-list><welcome-file>webapp/commoninfrastructure/WarehouseLogin.jsp</welcome-file></welcome-file-list>
    <jsp-config></jsp-config>
</web-app>
